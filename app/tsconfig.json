{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/components/*"
      ],
      "@/app/*": [
        "src/app/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/contexts/*": [
        "src/contexts/*"
      ],
      "@/providers/*": [
        "src/providers/*"
      ],
      "@/styles/*": [
        "src/styles/*"
      ]
    },
    "types": [
      "node"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
